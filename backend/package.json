{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "start": "ts-node-dev --respawn src/server.ts",
    "create": "mysql -u root -e \"create database if not exists task_management\"",
    "start:local": "NODE_ENV=local-env ts-node src/server.ts",
    "start:dev": "NODE_ENV=development ts-node src/server.ts",
    "build:run:dev": "npm run build && NODE_ENV=development node dist/src/server.js",
    "test": "jest --testTimeout=30000 --runInBand --detectOpenHandles --force-exit",
    "test:e2e": "NODE_ENV=test npm run test -- --config=tests/e2e.jest.config.ts",
    "test:e2e:local": "NODE_ENV=test-local npm run test -- --config=tests/e2e.jest.config.ts",
    "db:create": "mysql -u root -e \"create database if not exists task_management\"\n",
    "db:create:test": "mysql -u root -e \"create database if not exists task_management\"\n",
    "db:migrate:test:local": "sequelize-cli db:migrate --env test-local",
    "db:migrate:local": "sequelize-cli db:migrate",
    "db:migrate:dev": "sequelize-cli db:migrate --env development",
    "db:seed:test:local": "sequelize-cli db:seed:all",
    "db:seed:local": "sequelize-cli db:seed:all",
    "db:seed:dev": "sequelize-cli db:seed:all --env development"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@types/swagger-ui-express": "^4.1.6",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.11.0",
    "sequelize": "^6.37.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.14.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.4.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "sequelize-cli": "^6.6.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.4"
  }
}
